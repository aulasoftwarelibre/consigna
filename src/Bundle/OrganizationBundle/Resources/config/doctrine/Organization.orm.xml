<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity
            name="Component\Organization\Model\Organization"
            repository-class="Component\Organization\Repository\OrganizationRepository"
            table="organization"
    >
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="255"/>

        <field name="code" type="string" length="255" unique="true"/>

        <field name="enabled" type="boolean"/>

        <one-to-many target-entity="Component\User\Model\User" mapped-by="organization" field="users">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="username" direction="ASC"/>
            </order-by>
        </one-to-many>
     </entity>
</doctrine-mapping>
