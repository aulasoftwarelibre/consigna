<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Bundle\TagBundle\Entity\Tag" repository-class="Bundle\TagBundle\Repository\TagRepository" table="tag">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" length="50"/>

        <many-to-many target-entity="Bundle\FileBundle\Entity\File" field="files" mapped-by="tags">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-many>

        <many-to-many target-entity="Bundle\FolderBundle\Entity\Folder" field="folders" mapped-by="tags">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-many>
    </entity>
</doctrine-mapping>