<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="consigna_folder.type.folder_access" class="Bundle\FolderBundle\Form\Type\FolderAccessType">
            <argument type="service" id="security.encoder_factory"/>
            <tag name="form.type"/>
        </service>

        <service id="consigna_folder.type.folder_anon_access" class="Bundle\FolderBundle\Form\Type\FolderAnonAccessType">
            <argument type="service" id="security.encoder_factory"/>
            <tag name="form.type"/>
        </service>

        <service id="consigna_folder.type.folder_create" class="Bundle\FolderBundle\Form\Type\FolderCreateType">
            <tag name="form.type"/>
        </service>
        
        <service id="consigna_folder.type.folder_edit" class="Bundle\FolderBundle\Form\Type\FolderEditType">
            <tag name="form.type"/>
        </service>
    </services>
</container>