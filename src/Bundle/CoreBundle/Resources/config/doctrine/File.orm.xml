<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="AppBundle\Entity\File" repository-class="AppBundle\Repository\FileRepository" table="file">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="createdAt" type="datetime"/>

        <field name="createdFromIp" type="string" length="255" nullable="true"/>

        <field name="description" type="text" nullable="true"/>

        <field name="expiresAt" type="datetime" nullable="true"/>

        <field name="mimeType" type="string" length="255"/>

        <field name="name" type="string" length="255"/>

        <field name="path" type="string" length="255"/>

        <field name="password" type="string" length="255"/>

        <field name="scanStatus" length="255"/>

        <field name="salt" type="string" length="255"/>

        <field name="sharedCode" type="string" length="255"/>

        <field name="size" type="decimal"/>

        <field name="slug" length="127" unique="true"/>

        <field name="updatedAt" type="datetime"/>

        <many-to-one target-entity="Component\Folder\Model\Folder" field="folder" inversed-by="files">
            <join-column on-delete="CASCADE" nullable="true"/>
        </many-to-one>

        <many-to-one target-entity="AppBundle\Entity\User" field="owner" inversed-by="files">
            <join-column nullable="true"/>
        </many-to-one>

        <many-to-many target-entity="AppBundle\Entity\Tag" field="tags" inversed-by="files">
            <join-table name="file_tags">
                <join-columns>
                    <join-column name="file_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="tag_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many target-entity="AppBundle\Entity\User" field="sharedWithUsers" inversed-by="sharedFiles">
            <join-table name="file_shared_user">
                <join-columns>
                    <join-column name="file_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>