<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="consigna.type.download_folder" class="AppBundle\Form\Type\FileDownloadType">
            <argument type="service" id="security.encoder_factory"/>
            <tag name="form.type"/>
        </service>

        <service id="consigna.type.file_create" class="AppBundle\Form\Type\FileCreateType">
            <tag name="form.type"/>
        </service>

        <service id="consigna.type.folder_access" class="AppBundle\Form\Type\FolderAccessType">
            <argument type="service" id="security.encoder_factory"/>
            <tag name="form.type"/>
        </service>

        <service id="consigna.type.folder_create" class="AppBundle\Form\Type\FolderCreateType">
            <tag name="form.type"/>
        </service>

        <service id="consigna.type.folder_edit" class="AppBundle\Form\Type\FolderEditType">
            <tag name="form.type"/>
        </service>

        <service id="consigna.type.tags_text" class="AppBundle\Form\Type\TagsTextType">
            <argument type="service" id="consigna.manager.tag"/>
            <tag name="form.type"/>
        </service>

    </services>
</container>