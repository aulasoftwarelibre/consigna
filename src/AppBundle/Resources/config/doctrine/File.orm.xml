<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="AppBundle\Entity\File" repository-class="AppBundle\Repository\FileRepository" table="file">
        <gedmo:uploadable filename-generator="SHA1" callback="configureFileCallback" append-number="true"/>

        <field name="description" type="text" nullable="true"/>

        <field name="mimeType" type="string" length="255">
            <gedmo:uploadable-file-mime-type/>
        </field>

        <field name="path" type="string" length="255">
            <gedmo:uploadable-file-path/>
        </field>

        <field name="scanStatus" length="255"/>

        <field name="size" type="decimal">
            <gedmo:uploadable-file-size/>
        </field>
    </entity>
</doctrine-mapping>