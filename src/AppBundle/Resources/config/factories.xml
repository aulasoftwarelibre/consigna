<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="consigna.factory.file" class="AppBundle\Factory\FileFactory">
            <argument type="service">
                <service class="AppBundle\Factory\Factory">
                    <argument>AppBundle\Entity\File</argument>
                </service>
            </argument>
        </service>

        <service id="consigna.factory.folder" class="AppBundle\Factory\FolderFactory">
            <argument type="service">
                <service class="AppBundle\Factory\Factory">
                    <argument>AppBundle\Entity\Folder</argument>
                </service>
            </argument>
        </service>

        <service id="consigna.factory.organization" class="AppBundle\Factory\OrganizationFactory">
            <argument type="service">
                <service class="AppBundle\Factory\Factory">
                    <argument>AppBundle\Entity\Organization</argument>
                </service>
            </argument>
        </service>

        <service id="consigna.factory.tag" class="AppBundle\Factory\TagFactory">
            <argument type="service">
                <service class="AppBundle\Factory\Factory">
                    <argument>AppBundle\Entity\Tag</argument>
                </service>
            </argument>
        </service>

        <service id="consigna.factory.user" class="AppBundle\Factory\UserFactory">
            <argument type="service">
                <service class="AppBundle\Factory\Factory">
                    <argument>AppBundle\Entity\User</argument>
                </service>
            </argument>
            <argument type="service" id="consigna.object_repository.organization"/>
        </service>
    </services>
</container>