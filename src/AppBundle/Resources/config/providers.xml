<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="consigna.object_repository.item" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>AppBundle\Entity\Item</argument>
            <autowiring-type>AppBundle\Repository\Interfaces\ItemRepositoryInterface</autowiring-type>
        </service>


        <service id="consigna.object_manager.file" class="Doctrine\Common\Persistence\ObjectManager">
            <factory service="doctrine" method="getManagerForClass" />
            <argument>AppBundle\Entity\File</argument>
            <autowiring-type>AppBundle\Entity\Interfaces\FileInterface</autowiring-type>
        </service>

        <service id="consigna.object_repository.file" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>AppBundle\Entity\File</argument>
            <autowiring-type>AppBundle\Repository\Interfaces\FileRepositoryInterface</autowiring-type>
        </service>
        
        <service id="consigna.object_manager.folder" class="Doctrine\Common\Persistence\ObjectManager">
            <factory service="doctrine" method="getManagerForClass" />
            <argument>AppBundle\Entity\Folder</argument>
            <autowiring-type>AppBundle\Entity\Interfaces\FolderInterface</autowiring-type>
        </service>

        <service id="consigna.object_repository.folder" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>AppBundle\Entity\Folder</argument>
            <autowiring-type>AppBundle\Repository\Interfaces\FolderRepositoryInterface</autowiring-type>
        </service>
        
        <service id="consigna.object_manager.group" class="Doctrine\Common\Persistence\ObjectManager">
            <factory service="doctrine" method="getManagerForClass" />
            <argument>AppBundle\Entity\Group</argument>
            <autowiring-type>AppBundle\Entity\Interfaces\GroupInterface</autowiring-type>
        </service>

        <service id="consigna.object_repository.group" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>AppBundle\Entity\Group</argument>
            <autowiring-type>AppBundle\Repository\Interfaces\GroupRepositoryInterface</autowiring-type>
        </service>
        
        <service id="consigna.object_manager.organization" class="Doctrine\Common\Persistence\ObjectManager">
            <factory service="doctrine" method="getManagerForClass" />
            <argument>AppBundle\Entity\Organization</argument>
            <autowiring-type>AppBundle\Entity\Interfaces\OrganizationInterface</autowiring-type>
        </service>

        <service id="consigna.object_repository.organization" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>AppBundle\Entity\Organization</argument>
            <autowiring-type>AppBundle\Repository\Interfaces\OrganizationRepositoryInterface</autowiring-type>
        </service>
        
        <service id="consigna.object_manager.user" class="Doctrine\Common\Persistence\ObjectManager">
            <factory service="doctrine" method="getManagerForClass" />
            <argument>AppBundle\Entity\User</argument>
            <autowiring-type>AppBundle\Entity\Interfaces\UserInterface</autowiring-type>
        </service>

        <service id="consigna.object_repository.user" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>AppBundle\Entity\User</argument>
            <autowiring-type>AppBundle\Repository\Interfaces\UserRepositoryInterface</autowiring-type>
        </service>
    </services>
</container>