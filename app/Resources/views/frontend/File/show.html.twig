{% extends 'base.html.twig' %}
{% import 'macros/elements.html.twig' as elements %}

{% block breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> {{ 'breadcrum.MainFolder' | trans }}</a></li>
    <li class="active">{{ file }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <!-- general form elements -->
            <div class="box box-default">
                <div class="box-header">
                    <h3 class="box-title">{{ 'file.show.title' | trans }}</h3>
                </div><!-- /.box-header -->
                <div class="box-body text-center">
                    <p>
                        <i style="font-size: 100px;" class="fa fa-file-o"></i>
                    </p>
                    <h3>
                        {{ file }}
                    </h3>
                    <p>
                        {{ 'show.file.message' | trans({'%days%':days_before_clean - file.uploadDate|date('y-m-d')|time_diff('now'|date('y-m-d'))|abs }) }}
                        - {{ elements.bytesToSize(file.size) }}
                    </p>

                </div><!-- /.box-body -->
                <div class="box-footer">
                    <a href="{{ path("file_download", {'slug': file.slug}) }}" class="btn btn-sm btn-info btn-flat"><i class="fa fa-cloud-download"></i> {{ 'file.show.downloadbutton' | trans }}</a>
                    <a href="{{ path("homepage") }}" class="btn btn-sm btn-default btn-flat"><i class="fa fa-ban"></i> {{ 'file.show.cancelbutton' | trans }}</a>
                </div>
            </div><!-- /.box -->
        </div>
    </div>
{% endblock %}