{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> {{ 'base.icon.Mainfolder' | trans }}</a></li>
    <li class="active">{{ 'base.new.folder' | trans }}</li>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <!-- general form elements -->
              <div class="box box-default">
                <div class="box-header">
                  <h3 class="box-title">{{ 'folder.upload.title' | trans }}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form) }}
                  <div class="box-body">
                    {{ form_row(form.folderName) }}
                    {{ form_row(form.tags) }}
                    {{ form_row(form.plainPassword) }}
                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <button type="submit" class="btn btn-default">{{ 'submit.create.folder' | trans }}</button>
                  </div>
                {{ form_end(form) }}
              </div><!-- /.box -->

                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
{% endblock %}