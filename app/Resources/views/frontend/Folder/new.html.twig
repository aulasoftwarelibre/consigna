{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> {{ _('title.main_folder') }}</a></li>
    <li class="active">{{ _('title.create_folder') }}</li>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <!-- general form elements -->
              <div class="box box-default">
                <div class="box-header">
                  <h3 class="box-title">{{ _('title.create_folder') }}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form) }}
                    <div class="box-body">
                        {{ form_row(form.name) }}
                        {{ form_row(form.tags) }}
                        {{ form_row(form.plainPassword) }}
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <div class="pull-right btn-group">
                            <button type="submit" class="btn btn-default">{{ _('action.create_folder') }}</button>
                            <a href="{{ path("homepage") }}" class="btn btn-default btn-flat"><i class="fa fa-ban"></i> {{ _('action.cancel') }}</a>
                        </div>
                    </div>
                {{ form_end(form) }}
              </div><!-- /.box -->

                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
{% endblock %}