{% extends 'base.html.twig' %}

{% block header_title %}
    {% trans with {'%folder%': folder, '%files%': folder.files|length} %}
    <h1>%folder% <small>%files% files</small></h1>
    {% endtrans %}
{% endblock %}
{% block breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> {{ 'base.icon.Mainfolder' | trans }}</a></li>
    <li><a href="{{ path("folder_show", {'slug': folder.slug}) }}"></a>{{ folder }}</li>
    <li class="active">{{ 'folder.edit.title' | trans }}</li>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <!-- general form elements -->
              <div class="box box-default">
                <div class="box-header">
                  <h3 class="box-title">{{ 'folder.edit.title' | trans }}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form) }}
                  <div class="box-body">
                    {{ form_widget(form) }}
                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <button type="submit" class="btn btn-default"><i class="fa fa-refresh"></i> {{ 'submit.update.folder' | trans }}</button>
                    <a class="btn btn-default" href="{{ path("folder_show", {'slug': folder.slug}) }}"><i class="fa fa-ban"></i> {{ 'file.show.cancelbutton' | trans }}</a>
                  </div>
                {{ form_end(form) }}
              </div><!-- /.box -->

                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
{% endblock %}