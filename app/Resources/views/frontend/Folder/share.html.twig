{% extends 'base.html.twig' %}

{% block header_title %}
    <h1> {{ folder }}
        <small>{{ __('title.file_number', files|length) }}</small>
    </h1>
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> {{ _('title.main_folder') }}</a></li>
    <li><a href="{{ path("folder_show", {'slug': folder.slug}) }}"></a>{{ folder }}</li>
    <li class="active">{{ _('title.edit_folder') }}</li>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <!-- general form elements -->
              <div class="box box-default">
                <div class="box-header">
                  <h3 class="box-title">{{ _('title.edit_folder') }}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form) }}
                    <div class="box-body">
                    {{ form_widget(form) }}
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <div class="pull-right btn-group">
                            <button type="submit" class="btn btn-default"><i class="fa fa-refresh"></i> {{ _('action.update_folder') }}</button>
                            <a class="btn btn-default" href="{{ path("folder_show", {'slug': folder.slug}) }}"><i class="fa fa-ban"></i> {{ _('action.cancel') }}</a>
                        </div>
                    </div>
                {{ form_end(form) }}
              </div><!-- /.box -->

                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
{% endblock %}