{% extends 'base.html.twig' %}

{% block mainContent %}
                {#{% render controller("FOSUserBundle:Security:login") %}#}
                {#{% render controller("FOSUserBundle:Profile:show") %}#}

    <div class="navbar navbar-default" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">

    {% if not app.user %}
        <div class="row col-lg-12">
        <form class="form-signin pull-right" id="login" role="form" action="{{ path('new_login') }}">
            <button class="btn btn-lg btn-primary " type="submit">Sign in</button>
        </form>
        </div>
        {% else %}
                <h2>{{ app.user }}</h2>
    {% endif %}
        <form class="navbar-form navbar-right" name="form" action="{{ path('find') }}" method="get" >
            <input type="text" class="form-control col-lg-8" placeholder="Search" name="word">
        </form>
    </div>


    <div class="row">
        <div class="well well-sm col-md-12">
            Número de elementos: {{ files|length}}
        </div>
    </div> <!-- row -->

    <div class="row">
    <div class="col-md-12">
        <ul class="event-list">
        {% for file in files %}
            <li>
                <div class="info">
                    <h4 class="title"><i class="fa fa-file-o">{{file.filename}}</i></h4>
                    <p class ="desc"><span class="label label-default ">Etiqueta</span></p>
                    <p class ="desc">Tamaño. Subido por {{ file.owner}}</p>
                    <ul>
                        <li><i class="fa fa-download push"></i></li>
                        <li><i class="fa fa-trash-o"></i></li>
                    </ul>
                </div>
            </li>
                {% else %}
                         <li>No hay datos</li>
                {% endfor %}
         </ul>
    </div>
    </div> <!-- row -->




{% endblock %}

