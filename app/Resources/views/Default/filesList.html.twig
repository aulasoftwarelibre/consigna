{% extends 'base.html.twig' %}

{% block mainContent %}


    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <p class="navbar-text">Inicio / Carpeta</p>
            <a class="btn btn-default navbar-btn" href="#"><i class="fa fa-cloud-upload "></i> Subir archivo</a>
            <a class="btn btn-default navbar-btn" href="#"><i class="fa fa-folder"></i> Crear carpeta</a>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <form class="navbar-form navbar-right" role="search" action="{{ path('find') }}" method="get">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="word">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div><!-- /.container-fluid -->
    </nav>


    <div class="row">
    <div class="col-md-12">
        <ul class="event-list">
        {% for file in files %}
            <li>
                <div class="info">
                    <h4 class="title"><i class="fa fa-file-o"></i> {{file.filename}}</h4>
                    <p class ="desc">
                        Tama√±o: 15Mb - Subido por {{ file.user}} -
                        <span class="label label-default">Etiqueta</span>
                        <span class="label label-default">Etiqueta</span>
                        <span class="label label-default">Etiqueta</span>
                    </p>
                    <ul>
                        <li><i class="fa fa-download push"></i>Descargar </li>
                        {% if file.getUser() == app.user %}
                        <a href="{{ path('deleteFile',{'id':file.id}) }}" title="Eliminar {{ file.filename }}"><li><i class="fa fa-trash-o"></i>Borrar </li></a>
                        {% endif %}
                    </ul>
                </div>
            </li>
                {% else %}
                         <li>No hay datos</li>
                {% endfor %}
         </ul>
    </div>
    </div> <!-- row -->




{% endblock %}

