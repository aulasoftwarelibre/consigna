{% extends 'base.html.twig' %}

{% block mainContent %}


    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <p class="navbar-text">Start / Folder</p>
            <a class="btn btn-default navbar-btn" href="#"><i class="fa fa-cloud-upload "></i> Upload file</a>
            <a class="btn btn-default navbar-btn" href="#"><i class="fa fa-folder"></i> Create folder</a>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <form class="navbar-form navbar-right" role="search" action="{{ path('find') }}" method="get">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="word" id="search-button">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div><!-- /.container-fluid -->
    </nav>


    <div class="row">
    <div class="col-md-12">
        <ul class="event-list">

        {% for folder in folders %} <!-- list of folders -->
            <li>
                <div class="info">
                    <h4 class="title"><i class="fa fa-folder-o"></i>{% if folder.getUser==app.user %}<a href='{{ path('folder_files',{'slug':folder.slug}) }}'>{{ folder.folderName }}</a>{% else %}{{ folder.folderName }}{% endif %}</h4>
                    <p class ="desc">
                        Size: 15Mb - Upload by {{ folder.user }}
                        {% for tag in folder.tags  %}
                            <span class="label label-default">{{ tag }}</span>
                        {% endfor %}
                    </p>
                    <ul>
                        <li><i class="fa fa-download push"></i>Download </li>
                        {% if folder.getUser() == app.user %}
                            <a href="#" title="Delete {{ folder.folderName }}"><li><i class="fa fa-trash-o"></i>Delete </li></a>
                        {% endif %}
                    </ul>
                </div>
            </li>
        {% endfor %}

        {% for file in files %} <!-- list of files -->
            <li>
                <div class="info">
                    <h4 class="title"><i class="fa fa-file-o"></i> {{file.filename}}</h4>
                    <p class ="desc">
                        Size: 15Mb - Upload by {{ file.user}}
                        {% for tag in file.tags  %}
                            <span class="label label-default">{{ tag }}</span>
                        {% endfor %}
                    </p>
                    <ul>
                        <li><i class="fa fa-download push"></i>Download </li>
                        {% if file.getUser() == app.user %}
                        <a href="{{ path('file_delete',{'slug':file.slug}) }}" title="Delete {{ file.filename }}"><li><i class="fa fa-trash-o"></i>Delete </li></a>
                        {% endif %}
                    </ul>
                </div>
            </li>
        {% endfor %}
        {% if files==null and folders==null %}
        <li class="alert alert-danger">
                No data
        </li>
        {% endif %}
         </ul>
    </div>
    </div> <!-- row -->

{% endblock %}

