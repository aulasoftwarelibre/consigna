{% extends 'base.html.twig' %}
{% block uploadFile %}
    {% if folder.user == app.user %}
    <a class="btn btn-default navbar-btn" href="{{ path('uploadFile_folder',{'slug':folder.slug}) }}"><i class="fa fa-cloud-upload "></i> Upload file</a>
    {% endif %}
{% endblock %}

{% block mainContent %}
    <div class="row">
        <div class="col-md-12">
            <ul class="event-list">
                {% for file in folder.files %} <!-- list of folders -->
                    <li>
                        <div class="info">
                            <h4 class="title"><i class="fa fa-file-o"></i> {{file.filename}}</h4>
                            <p class ="desc">
                                Size: 15Mb - Upload by {{ file.user}}
                                {% for tag in file.tags  %}
                                    <span class="label label-default">{{ tag }}</span>
                                {% endfor %}
                            </p>
                            <ul>
                                {% if app.user or not app.user and file.user %}
                                    <a href="{{ path('control_file_download',{'slug':file.slug}) }}" title="Download {{ file.filename }}"><li><i class="fa fa-download push"></i>Download </li></a>
                                {% endif %}                                {% if file.getUser() == app.user %}
                                    <a href="{{ path('file_delete',{'slug':file.slug}) }}" title="Delete {{ file.filename }}"><li><i class="fa fa-trash-o"></i>Delete </li></a>
                                {% endif %}
                            </ul>
                        </div>
                    </li>
                {% endfor %}
                {% if folder.files==null %}
                    <li class="alert alert-danger">No data </li>
                {% endif %}
            </ul>
        </div>
    </div> <!-- row -->


{% endblock %}

