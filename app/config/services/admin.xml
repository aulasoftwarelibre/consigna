<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="consigna.admin.file" class="MovedBundle\Admin\FileAdmin">
            <tag name="sonata.admin" manager_type="orm" label="menu.file"/>
            <argument/>
            <argument>MovedBundle\Entity\File</argument>
            <argument/>
        </service>

        <service id="consigna.admin.folder" class="MovedBundle\Admin\FolderAdmin">
            <tag name="sonata.admin" manager_type="orm" label="menu.folder"/>
            <argument/>
            <argument>MovedBundle\Entity\Folder</argument>
            <argument/>
            <call method="addChild">
                <argument type="service" id="consigna.admin.file"/>
            </call>
        </service>

        <service id="consigna.admin.organization" class="MovedBundle\Admin\OrganizationAdmin">
            <tag name="sonata.admin" manager_type="orm" label="menu.organization"/>
            <argument/>
            <argument>MovedBundle\Entity\Organization</argument>
            <argument/>
        </service>

        <service id="consigna.admin.user" class="MovedBundle\Admin\UserAdmin">
            <tag name="sonata.admin" manager_type="orm" label="menu.user"/>
            <argument/>
            <argument>MovedBundle\Entity\User</argument>
            <argument/>
        </service>

    </services>

</container>